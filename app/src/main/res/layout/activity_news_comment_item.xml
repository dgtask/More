<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:textColor="#666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/comment_time_icon"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-2dp"
            android:src="@mipmap/ic_time" />

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/comment_time_icon"
            android:textColor="#888"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/comment_support_icon"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="-2dp"
            android:layout_toLeftOf="@+id/comment_support"
            android:src="@mipmap/ic_support" />

        <TextView
            android:id="@+id/comment_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/comment_against_icon"
            android:textColor="#888"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/comment_against_icon"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="-4dp"
            android:layout_toLeftOf="@+id/comment_against"
            android:src="@mipmap/ic_against" />

        <TextView
            android:id="@+id/comment_against"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:textColor="#888"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>
